public String changeTimeFormat(String strTime) {
    //code here
    String hourStr = strTime.substringBefore(':');
    Integer hour = Integer.valueOf(hourStr);
    String minutes = strTime.substringAfter(':'));
    String suffix = ' AM';


    if(hour == 0){
        hour = 12;
    }

    if(hour == 12){
        suffix = ' PM';
    }
    
    if(hour > 12){
        hour -= 12;
        suffix = ' PM';
    }

    String formattedHours = String.valueOf(hour);
    if(formattedHours.length()==1){
        formattedHours = '0' + formattedHours;
    }

    String formattedTime = formattedHours+':'+ minutes + suffix;

    return formattedTime;
}
public void createCourseAndClass(String name, String description) {
    // code here
    if(name != null && description != null){
        apxio__Course__c newCourse = new apxio__Course__c();
        newCourse.Name = name;
        newCourse.apxio__Course_Details__c = description;
        insert newCourse;

        apxio__Class__c newClass = new apxio__Class__c();
        newClass.apxio__Course__c = newCourse;
        newClass.Name = name;
        newClass.apxio__Description__c = description.substring(0,254);
        insert newClass;
    }


}